<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/textView32"
            android:layout_width="62dp"
            android:layout_height="44dp"
            android:text="수량"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textIsSelectable="false"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/buyQuantityBox"
            android:layout_width="134dp"
            android:layout_height="49dp"
            android:backgroundTint="@color/black"
            android:ems="10"
            android:inputType="number" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/little_dark_grey"
            android:fontFamily="@font/notosanskrregular"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="구매하기"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout8"
        tools:layout_editor_absoluteX="0dp">

        <Button
            android:id="@+id/buy_check_yes"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:fontFamily="@font/notosanskrlight"
            android:gravity="center"
            android:includeFontPadding="false"
            android:padding="16dp"
            android:text="구매"
            android:textColor="@color/default_color"
            android:textSize="16sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#66bdbdbd" />

        <Button
            android:id="@+id/buy_check_no"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:fontFamily="@font/notosanskrlight"
            android:gravity="center"
            android:includeFontPadding="false"
            android:padding="16dp"
            android:text="취소"
            android:textColor="@color/default_color"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="216dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="24dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5"
        tools:layout_editor_absoluteX="2dp">

        <ImageView
            android:id="@+id/buyingImage"
            android:layout_width="175dp"
            android:layout_height="177dp"
            android:background="@color/black"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <LinearLayout
            android:layout_width="169dp"
            android:layout_height="178dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView28"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:text="아이템명"
                android:textAlignment="center"
                android:textIsSelectable="false"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textview32"
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:text="아이템 고유정보"
                android:textIsSelectable="false"
                android:textSize="15sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6"
        tools:layout_editor_absoluteX="1dp">

        <TextView
            android:id="@+id/textView213"
            android:layout_width="62dp"
            android:layout_height="44dp"
            android:text="가격"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textIsSelectable="false"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/buyCostBox"
            android:layout_width="134dp"
            android:layout_height="49dp"
            android:backgroundTint="@color/black"
            android:ems="10"
            android:textSize="20sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>