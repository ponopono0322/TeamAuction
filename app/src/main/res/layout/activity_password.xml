<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical">

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"
                android:backgroundTint="#00ff0000"
                android:id="@+id/back_password"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="56dp"
                android:text="@string/recom_password"
                android:textSize="30sp"
                android:textColor="@color/little_dark_grey"
                android:includeFontPadding="false"
                android:fontFamily="@font/notosanskrmedium"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:layout_marginStart="56dp"
                android:textSize="14sp"
                android:textColor="@color/default_color"
                android:text="@string/wantfindid"
                android:includeFontPadding="false"
                android:fontFamily="@font/notosanskrlight"/>

            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:textColor="@color/default_color"
                android:backgroundTint="@color/default_color"
                android:hint="@string/hint_id"
                android:id="@+id/find_pw_idbox"
                android:inputType="textEmailAddress"
                android:includeFontPadding="false"
                android:fontFamily="@font/notosanskrthin"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_marginTop="50dp"
                android:text="@string/send_email"
                android:textSize="16sp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/find_pw_button"
                android:background="@drawable/button_round"
                android:textColor="@color/white"
                android:fontFamily="@font/notosanskrmedium"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/default_color"
                android:text="@string/getpwfromemail"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:includeFontPadding="false"
                android:fontFamily="@font/notosanskrlight"/>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>